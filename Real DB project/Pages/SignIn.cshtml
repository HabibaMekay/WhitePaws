<!-- Start Contact Form -->
<div class="untree_co-section">
	<div class="container">

		<div class="block">
			<div class="row justify-content-center">

				<div class="col-md-8 col-lg-8 pb-4 text-center">

					<form method="post" asp-page-handler="Signinbtn">
						<div class="row">
							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="fname">Username</label>  
									<input type="text" class="form-control" asp-for="Username"> @* added asp for 3ashan ye3raf en da ely bakhdo men el form fe el C# *@
									<span asp-validation-for="Username"></span>
								</div>
							</div>
							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="lname">Password</label>
									<input type="password" class="form-control" asp-for="Password">
								<span asp-validation-for="Password"></span>
								</div>
							</div>
						</div>

					
						<div class="form-group text-center row mt-3 mb-3">
							<span>@Model.msg</span>

								<button type="submit" class="btn btn-primary">Sign in</button>

							
							
						</div>
					</form>
					
					

					<!-- sign up -->
					<form method="post" asp-page-handler="Signup">
						<div class="row">
							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="fname">Username</label> 
									<input type="text" class="form-control" asp-for="@Model.SUusername">
									<span asp-validation-for="SUusername"></span>
								</div>
							</div>
							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="lname">Password</label>
									<input type="password" class="form-control" asp-for="@Model.SUpassword">
									<span asp-validation-for="SUpassword"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="fname">Name</label>
									<input type="text" class="form-control" asp-for="@Model.SUname">
									<span asp-validation-for="SUname"></span>
								</div>
							</div>
							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="lname">Phone</label>
									<input type="text" class="form-control" asp-for="@Model.SUphone">
									<span asp-validation-for="SUphone"></span>
								</div>
							</div>
						</div>
						<div class="form-group text-center row mt-3 mb-3">
							<span>@Model.msg2</span>
							<button type="submit" class="btn btn-primary">Sign up</button>
						</div>
					</form>

				</div>

			</div>

		</div>

	</div>
</div>
<!-- End Contact Form -->