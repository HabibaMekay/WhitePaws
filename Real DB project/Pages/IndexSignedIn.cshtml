				@* <a class="product-item" asp-area="" asp-page="/shop"> *@
					<img src="images/Rabbit.jpeg" class="img-fluid product-thumbnail">
					<h3 class="product-title">Fluffy</h3>
					<strong class="product-price">Rabbit</strong>

					@* <span class="icon-cross">
						<img src="images/cross.svg" class="img-fluid">
					</span> *@
				</a>
			</div>
			<!-- End Column 4 -->

