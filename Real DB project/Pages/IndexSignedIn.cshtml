	</div>
</div>
<!-- End Product Section -->

<!-- Start Footer Section -->
<footer class="footer-section">
	<div class="container relative">

@* 		<div class="sofa-img">
			<img src="images/Doge-Head-Transparent.png" alt="Image" class="img-fluid">
		</div> *@

		<div class="row">
			<div class="col-lg-8">
				<div class="subscription-form">
					<form method="post" class="row g-3" asp-page-handler="donate">
						<input type="hidden" asp-for="ClientUser" />
						<h3 class="d-flex align-items-center"><span class="me-1"><img src="images/envelope-outline.svg" alt="Image" class="img-fluid"></span><span> Help our community  </span></h3>
						<div class="col-auto">
							<input type="text" class="form-control" placeholder="Enter donation amount" asp-for=" amount">
							<span asp-validation-for="amount"></span>
						</div>
						<br />
						<div class="col-auto">
							<input type="text" class="form-control" placeholder="Enter your credit card information" asp-for="creditcard">
							<span asp-validation-for="creditcard"></span>
						</div>
						<br />
						<div class="col-auto">
							<input type="text" class="form-control" placeholder="Enter your CVV" asp-for="cvv">
							<span asp-validation-for="cvv"></span>
						</div>
						<div class="col-auto">
							<p><button class="btn btn-primary"> Donate now! </button></p>
							
						</div>
					</form>

				</div>
			</div>
		</div>

		
</footer>
<!-- End Footer Section -->